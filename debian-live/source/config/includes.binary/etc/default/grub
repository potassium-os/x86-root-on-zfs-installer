# Grub2 /etc/default/grub config

GRUB_DEFAULT=0
GRUB_TIMEOUT=0
GRUB_DISTRIBUTOR=`lsb_release -i -s 2> /dev/null || echo Debian`
GRUB_CMDLINE_LINUX_DEFAULT="noautologin live-config.username=installer components boot=live hostname=potassium-installer SSH_KEY_URL= INST_CONF_URL= "
GRUB_CMDLINE_LINUX="console=tty0 console=ttyS0,115200 console=ttyS1,115200"
GRUB_TERMINAL="console serial"
GRUB_DISABLE_OS_PROBER=true
GRUB_TIMEOUT_STYLE=menu
